<div class="card swap-card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <% if @item.photo.attached? %>
        <%= image_tag(@item.photo, class: "card-img-top") %>
      <% end %>
    </div>
    <div class="col-md-8">
      <div class="card-header"><%= @header %></div>
      <div class="card-body">
        <h5 class="card-title"><%= @item.name %></h5>
        <p class="card-text"><%= @item.description %></p>
      </div>
      <ul class="list-group list-group-flush no-border-top">
        <li class="list-group-item text-muted"><%= @item.category %></li>
      </ul>
      <div class="card-footer d-flex justify-content-between">
        
        <%# render relevant buttons for each card %>
        <%= render "shared/pending_swap_buttons" %>

        <p class="my-auto"><strong><%= @item.swapzi_points %></strong> Swapzi Points</p>
      </div>
    </div>
  </div>
</div>
