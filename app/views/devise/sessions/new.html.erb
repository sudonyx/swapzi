<div class="container form-container">

  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="my-form">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "my-input" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "my-input" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "my-form-btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
