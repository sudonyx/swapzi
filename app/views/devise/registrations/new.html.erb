<div class="container form-container">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "signup-form"}) do |f| %>
    <%= f.error_notification %>

    <div class="my-form">
      <%= f.input :username,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "username" },
                  label_html: { class: "my-input" } %>

      <%= f.input :location,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "location" },
                  label_html: { class: "my-input" } %>

      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  label_html: { class: "my-input" } %>

      <%= f.input :swapzi_score, as: :hidden, input_html: { value: 0 } %>

      <%= f.input :photo,
                  as: :file,
                  label: "Profile Image",
                  label_html: { class: "my-input" } %>

      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" },
                  label_html: { class: "my-input" } %>

      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" },
                  label_html: { class: "my-input" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "my-form-btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
