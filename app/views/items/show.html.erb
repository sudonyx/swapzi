<div class="container">

  <div class="item-show-container">

    <div class="show-page-img">
      <% if @item.photo.attached? %>
        <%= image_tag(@item.photo, class: "card-img-top") %>
      <% end %>

      <span class="mb-0 px-3 show-swapzi-points"><%= @item.swapzi_points %> Swapzi Points</span>
    </div>

    <div class="item-show-details mx-4">
      <div class="mb-4 d-flex justify-content-between align-items-center">
        <h1 class="mb-0"><%= @item.name %></h1>
      </div>

      <div class="d-flex align-items-center mb-4">
        <%= link_to user_profile_path(@item.user) do %>
          <% if @item.user.photo.attached? %>
            <%= image_tag @item.user.photo, class: "avatar-large" %>
          <% else %>
            <%= image_tag "avatar-default-icon.png", class: "avatar-large" %>
          <% end %>
        <% end %>
        <h3 class="my-auto mx-4"><%= @item.user.username %> in <%= @item.user.location %></h3>
      </div>

      <p class="mb-5"><%= @item.description%></p>

      <% if @item.relist && @item.user == current_user %>
        <div class="mt-4">
          <%= button_to "Relist item", relist_item_path(@item), id: "show-button", class: "btn btn-outline-dark rounded-pill", method: :patch, data: {turbo_method: :patch} %>
        </div>
      <% end %>

      <% if @item.user == current_user %>
        <div class="mt-4">
          <%= link_to "Edit this item", edit_item_path(@item), id: "show-button", class: "btn btn-outline-dark rounded-pill" %>
        </div>
      <% end %>

      <div class="container item-show-actions p-0">

        <% unless @item.user == current_user %>
          <%= link_to "Choose an item to swap", new_item_swap_path(@item, page: 'new_swap'), id: "show-button", class: "btn btn-outline-primary rounded-pill" %>

          <div class="mt-4">
            <%= turbo_frame_tag "fav-button" do %>
              <%= render 'favourites/fav_button' %>
            <% end %>
          </div>


        <% end %>

        <%# <div class="container item-show-container">
          <div class="comments-section">
            <h2>Item Comments</h2>
          </div>
        </div> %>

      </div>
    </div>
  </div>


   <% unless @item.user == current_user %>
    <div class="suggestions-box">
      <h2 class="mt-5 mb-4">Check out <%= @item.user.username %>'s other items</h2>
      <div class="card-group">
        <% @items = @random_items %>
        <%= render "items/item_card_grid" %>
      </div>
    </div>
  <% end %>

</div>
