<div class="container">

  <div class="item-show-container" style="margin-bottom: 10px; height: 400px;">
    <div class="show-page-img">
      <% if @item.photo.attached? %>
        <%= image_tag(@item.photo, class: "card-img-top", style: "height:100%;") %>
      <% end %>

      <% unless @item.user == current_user %>
        <div class="fav-positon" style="position: absolute; top: 10px; left: 10px;">
          <%= turbo_frame_tag "fav-button" do %>
            <%= render 'favourites/fav_button' %>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="item-show-details mx-4">
      <div class="mb-4">
        <h1><%= @item.name %></h1>
        <% if @item.swap_counter > 0 %>
          <p>Extra points! This item has been swapped <%= @item.swap_counter %> time<%= @item.swap_counter > 1 ? "s" : "" %>!</p>
        <% end %>
      </div>

      <div class="d-flex align-items-center mb-4">
        <%= link_to user_profile_path(@item.user) do %>
          <% if @item.user.photo.attached? %>
            <%= image_tag @item.user.photo, class: "avatar-large" %>
          <% else %>
            <%= image_tag "avatar-default-icon.png", class: "avatar-large" %>
          <% end %>
        <% end %>
        <h3 class="my-auto mx-4"><%= @item.user.username %> in <%= @item.user.location %></h3>
      </div>

      <p class="mb-5"><%= @item.description%></p>

      <% if @item.relist && @item.user == current_user %>
        <div class="mt-4">
          <%= button_to "Relist item", relist_item_path(@item), id: "show-button", class: "btn btn-outline-dark rounded-pill", method: :patch, data: {turbo_method: :patch} %>
        </div>
      <% end %>

      <% if @item.user == current_user %>
        <div class="mt-4">
          <%= link_to "Edit this item", edit_item_path(@item), id: "show-button", class: "btn btn-outline-dark rounded-pill" %>
        </div>

        <% if @item.featured %>
          <div class="mt-4">
            <%= button_to "Item featured!", {}, disabled: true, id: "show-button", class: "btn btn-outline-dark rounded-pill" %>
          </div>
        <% else %>
          <div class="mt-4">
            <%= button_to "Feature this item", feature_item_path(@item), id: "show-button", class: "btn btn-outline-dark rounded-pill", method: :patch, data: { turbo_method: :patch, turbo_confirm: "Spend 100 swapzi points to feature this item?" } %>
          </div>
        <% end %>
      <% end %>
      
      <div class="container item-show-actions p-0" style="position: relative;">
        <% unless @item.user == current_user %>
          <div style="display: flex; justify-content: space-between; align-items: flex-end; position: relative; bottom: 0;">
            <%= link_to "Choose an item to swap", new_item_swap_path(@item, page: 'new_swap'), class: "btn-orange" %>
            <span class="btn-purple-show" style="display: block; margin-left: 10px; width: 260px; text-align: center;">Swapzi Points: <%= @item.swapzi_points %></span>
          </div>
        <% end %>

        <%# <div class="container item-show-container">
          <div class="comments-section">
            <h2>Item Comments</h2>
          </div>
        </div> %>

      </div>
    </div>
  </div>


   <% unless @item.user == current_user %>
    <div class="suggestions-box">
      <h2 class="mt-5 mb-4">Check out <%= @item.user.username %>'s other items</h2>
      <div class="card-group">
        <% @items = @random_items %>
        <%= render "items/item_card_grid" %>
      </div>
    </div>
  <% end %>

</div>
